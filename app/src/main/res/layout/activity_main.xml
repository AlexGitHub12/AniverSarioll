<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcd4cc"
    tools:context=".MainActivity">

  <androidx.viewpager2.widget.ViewPager2
      android:id="@+id/viewPagerImageSlider"
      android:layout_width="413dp"
      android:layout_height="512dp"
      android:layout_marginTop="136dp"
      android:paddingStart="80dp"
      android:paddingEnd="80dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

  </androidx.viewpager2.widget.ViewPager2>

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="126dp"
      android:layout_height="66dp"
      android:layout_marginStart="140dp"
      android:layout_marginTop="44dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/diamante" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="88dp"
      android:layout_marginTop="104dp"
      android:text="ANNIVERSARY"
      android:textColor="@color/black"
      android:textSize="35dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="112dp"
      android:layout_marginTop="152dp"
      android:fontFamily="cursive"
      android:text="Para la niña mas linda del mundo"
      android:textSize="15dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="140dp"
      android:layout_marginTop="608dp"
      android:fontFamily="cursive"
      android:text="♡ Amarte es un placer ♡"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/fingerIcon"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="44dp"
      android:src="@drawable/ic_baseline_fingerprint_24"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/button"
      android:layout_width="50dp"
      android:layout_height="31dp"
      android:layout_marginStart="116dp"
      android:layout_marginTop="188dp"
      android:background="#00FFFFFF"
      app:icon="@drawable/icons8_hex_gono_96"
      app:iconSize="20dp"
      app:iconTint="#000000"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/button2"
      android:layout_width="49dp"
      android:layout_height="31dp"
      android:layout_marginStart="240dp"
      android:layout_marginTop="188dp"
      android:background="#00FFFFFF"
      app:icon="@drawable/icons8_hex_gono_96"
      app:iconSize="20dp"
      app:iconTint="#000000"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/button3"
      android:layout_width="47dp"
      android:layout_height="31dp"
      android:layout_marginStart="180dp"
      android:layout_marginTop="188dp"
      android:background="#00FFFFFF"
      app:icon="@drawable/icons8_hex_gono_96"
      app:iconSize="20dp"
      app:iconTint="#000000"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>